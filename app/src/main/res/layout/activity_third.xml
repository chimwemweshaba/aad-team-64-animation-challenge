<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Click on the image of the fish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagePic2"
        android:onClick="correct"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagePic1"
        app:srcCompat="@drawable/fish" />

    <ImageView
        android:id="@+id/imagePic1"
        android:onClick="correct"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/imagePic3"
        android:onClick="correct"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/imagePic1"
        app:layout_constraintTop_toBottomOf="@+id/imagePic1"
        app:srcCompat="@drawable/lizard" />

    <ImageView
        android:id="@+id/imagePic4"
        android:onClick="correct"
        android:layout_width="143dp"
        android:layout_height="143dp"
        app:layout_constraintEnd_toEndOf="@+id/imagePic2"
        app:layout_constraintTop_toTopOf="@+id/imagePic3"
        app:srcCompat="@drawable/plane" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Next"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagePic3" />
</androidx.constraintlayout.widget.ConstraintLayout>